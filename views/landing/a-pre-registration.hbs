<div class="container pt-3 pb-5">
    <div class="row" id="err"></div>
    <div class="row mt-2">
            <h2><strong>Pre-registration</strong></h2>
        </div>
        <div class="col-lg-12">
            <div class="red">
                <p>All fields are required*</p>
                <p>Please put N/A if not applicable</p>
            </div>
        </div>
        <form>
            {{#if alert}}
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                {{alert}}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
            {{/if}}
            <form action="/a-application-dl" method="POST" enctype="multipart/form-data"></form>
                {{> add-member }}
            </form>
                <!-- copy of input fields group of addded beneficiries -->
            <div class="form-group fieldGroupCopy" style="display: none;">
                <div class="input-group row mt-2">
                    <div class="col-lg-4">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" name="ben_fullname[]" placeholder="Full Name" required>
                            <label for="floatingInput">Full Name</label>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="form-floating mb-3 mt-3">
                            <input type="text" class="form-control" id="floatingInput" name="ben_relationship[]" placeholder="Relationship" required>
                            <label for="floatingInput">Relationship</label>
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingInput" name="ben_birthdate[]" placeholder="Birth Date" required>
                            <label for="floatingInput">Birth Date</label>
                        </div>
                    </div>
                    <div class="col-lg-1">
                        <div class="mb-3">
                            <a href="javascript:void(0)" class="btn btn-danger remove"><i class="fas fa-minus-circle"></i></a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>s
</div>